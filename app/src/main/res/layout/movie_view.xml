<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/movie_view_linearlayout"
        android:layout_width="170dp"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:cardCornerRadius="20dp">
        <ImageView
            android:id="@+id/movie_view_imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/movie1" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/movie_view_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Movie Title"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_medium"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginStart="3dp"/>
        
        <RatingBar
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="-17dp"
            android:layout_marginStart="-70dp"
            android:layout_marginEnd="-21dp"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="3.5"
            android:stepSize="0.5"
            android:scaleX="0.4"
            android:scaleY="0.4"
            android:id="@+id/movie_view_ratingbar"/>
        <Button
            android:layout_width='wrap_content'
            android:layout_height="30dp"
            android:text="Details"
            android:drawableRight="@drawable/baseline_trending_flat_24"
            android:textAllCaps="false"
            android:textColor="@color/purple_200"
            android:background="@android:color/transparent"
            android:fontFamily="@font/poppins_medium"
            android:textSize="9sp"
            android:textStyle="bold"
            android:id="@+id/movie_view_button"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="-17dp"
            android:layout_marginStart="50dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2023"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_medium"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            android:layout_marginTop="-25dp"
            android:id="@+id/movie_view_datetext"/>





    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>